        vtubers: [],
        anime: [],
        piano: [],
        "bringus studios": ["bringus"],
        "undertale/deltarune": ["deltarune"],
        "osu! (kinda)": [],
        "honkai star rail": ["hsr"],
        portal: [],
        "trans stuff": ["trans"],
      },
      dni: {
        transphobes: ["transphobic"],
        homophobes: ["homophobic"],
        racists: ["racism"],
        nazis: ["fascists"],
        terfs: ["terf"],
        pedophiles: ["predators"],
        ableists: ["ableism"],
        zionists: ["zionist"],
        misogynists: ["misogyny"],
        "crypto/nft bros": ["cryptocurrency", "nft"],
